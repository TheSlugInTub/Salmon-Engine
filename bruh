class Camera {
public:
    Camera(glm::vec3 position = glm::vec3(0.0f, 0.0f, 1.0f),
        glm::vec3 up = glm::vec3(0.0f, 1.0f, 0.0f),
        float yaw = -90.0f,
        float pitch = 0.0f);

    // Some functions for getting the view, and proj matrices are here
    // But they're irrelevant
    // Also some functions for moving and rotating the camera

    glm::vec3 Position;
    glm::vec3 Front;
    glm::vec3 Up;
    glm::vec3 Right;

    float Yaw;
    float Pitch;
    float MovementSpeed;
    float MouseSensitivity;
    float Zoom;
private:
    void updateCameraVectors();

    // Up direction (acts as a constant)
    glm::vec3 WorldUp;
};
